---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Main from "@/layouts/Main.astro";
import Hr from "@/components/Hr.astro";

// 登壇情報を取得（日付降順）
const talks = await getCollection("talks");
const sortedTalks = talks.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

// 入賞情報を取得（日付降順）
const awards = await getCollection("awards");
const sortedAwards = awards.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const formatDate = (date: Date) => {
  return date.toLocaleDateString("ja-JP", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout>
  <Header activeNav="activities" />
  <Main pageTitle="Activities" withSidebar={false}>
    <!-- サイドバー（一時的に非表示）
    <ArchiveSidebar slot="sidebar" items={archiveItems} />
    -->
    <!-- 登壇情報 -->
    <section class="mb-12">
      <h2 class="mb-6 text-xl font-semibold">Talks</h2>
      {
        sortedTalks.length === 0 ? (
          <p class="text-muted">登壇情報はまだありません</p>
        ) : (
          <div class="grid gap-6 sm:grid-cols-2">
            {sortedTalks.map(talk => (
              <a
                href={`/talks/${talk.id}`}
                class="group flex h-full flex-col overflow-hidden rounded-lg border border-border bg-background shadow-sm transition-all hover:border-accent hover:shadow-md"
              >
                {talk.data.ogpImage && (
                  <div class="aspect-video w-full overflow-hidden">
                    <img
                      src={talk.data.ogpImage}
                      alt={talk.data.title}
                      class="h-full w-full object-cover transition-transform group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="flex flex-1 flex-col p-4">
                  <h3 class="line-clamp-2 text-lg font-medium transition-colors group-hover:text-accent">
                    {talk.data.title}
                  </h3>
                  <p class="mt-2 text-sm text-muted">
                    {talk.data.event}
                    {talk.data.venue && ` @ ${talk.data.venue}`}
                  </p>
                  <p class="mt-1 text-xs text-muted">
                    {formatDate(talk.data.date)}
                  </p>
                  {talk.data.tags && talk.data.tags.length > 0 && (
                    <div class="mt-3 flex flex-wrap gap-1">
                      {talk.data.tags.map(tag => (
                        <span class="text-xs text-muted">#{tag}</span>
                      ))}
                    </div>
                  )}
                  <div class="mt-auto flex flex-wrap gap-2 pt-3 text-xs">
                    {talk.data.slideUrl && (
                      <span class="inline-flex items-center gap-1 rounded bg-accent/10 px-2 py-1 text-accent">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <rect
                            x="2"
                            y="3"
                            width="20"
                            height="14"
                            rx="2"
                            ry="2"
                          />
                          <line x1="8" y1="21" x2="16" y2="21" />
                          <line x1="12" y1="17" x2="12" y2="21" />
                        </svg>
                        Slides
                      </span>
                    )}
                    {talk.data.videoUrl && (
                      <span class="inline-flex items-center gap-1 rounded bg-accent/10 px-2 py-1 text-accent">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <polygon points="5 3 19 12 5 21 5 3" />
                        </svg>
                        Video
                      </span>
                    )}
                    {talk.data.eventUrl && (
                      <span class="inline-flex items-center gap-1 rounded bg-accent/10 px-2 py-1 text-accent">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <rect
                            x="3"
                            y="4"
                            width="18"
                            height="18"
                            rx="2"
                            ry="2"
                          />
                          <line x1="16" y1="2" x2="16" y2="6" />
                          <line x1="8" y1="2" x2="8" y2="6" />
                          <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                        Event
                      </span>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        )
      }
    </section>

    <Hr />

    <!-- 入賞情報 -->
    <section class="mt-12">
      <h2 class="mb-6 text-xl font-semibold">Awards</h2>
      {
        sortedAwards.length === 0 ? (
          <p class="text-muted">入賞情報はまだありません</p>
        ) : (
          <div class="grid gap-6 sm:grid-cols-2">
            {sortedAwards.map(award => (
              <a
                href={`/awards/${award.id}`}
                class="group flex h-full flex-col overflow-hidden rounded-lg border border-border bg-background shadow-sm transition-all hover:border-accent hover:shadow-md"
              >
                <div class="flex flex-1 flex-col p-4">
                  <h3 class="line-clamp-2 text-lg font-medium transition-colors group-hover:text-accent">
                    {award.data.title}
                  </h3>
                  <p class="mt-2 text-xs text-muted">
                    {formatDate(award.data.date)}
                  </p>
                  {award.data.tags && award.data.tags.length > 0 && (
                    <div class="mt-3 flex flex-wrap gap-1">
                      {award.data.tags.map(tag => (
                        <span class="text-xs text-muted">#{tag}</span>
                      ))}
                    </div>
                  )}
                  <div class="mt-auto flex flex-wrap gap-2 pt-3 text-xs">
                    {award.data.projectUrl && (
                      <span class="inline-flex items-center gap-1 rounded bg-accent/10 px-2 py-1 text-accent">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
                        </svg>
                        Project
                      </span>
                    )}
                    {award.data.eventUrl && (
                      <span class="inline-flex items-center gap-1 rounded bg-accent/10 px-2 py-1 text-accent">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-3.5 w-3.5"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <rect
                            x="3"
                            y="4"
                            width="18"
                            height="18"
                            rx="2"
                            ry="2"
                          />
                          <line x1="16" y1="2" x2="16" y2="6" />
                          <line x1="8" y1="2" x2="8" y2="6" />
                          <line x1="3" y1="10" x2="21" y2="10" />
                        </svg>
                        Event
                      </span>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        )
      }
    </section>
  </Main>
  <Footer />
</Layout>
