---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Socials from "@/components/Socials.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

export interface Props {
  frontmatter: {
    title: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;

const personStructuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: SITE.author,
  url: SITE.website,
  image: new URL(SITE.ogImage ? `/${SITE.ogImage}` : "/og.png", SITE.website).href,
  sameAs: SOCIALS.map(social => social.href),
  description: SITE.desc,
};
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Fragment slot="head">
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify(personStructuredData)}
    />
  </Fragment>
  <Header />
  <Breadcrumb />
  <main id="main-content">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
      <slot />
      {
        SOCIALS.length > 0 && (
          <div class="mt-8 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>
  </main>
  <Footer />
</Layout>
